<h1>Create a New Song</h1>

<form method="POST" action="/songs">

<label>Name:</label><input type="text" name="song[name]" id="song_name">
<label>Artist:</label><input type="text" name="artist[name]" id="artist_name"><br>

<label>Genres:</label>
<br>
<% @genres.each do |genre| %>
<input id="<%= genre.name %>" type="checkbox" name="song[genres][]" value="<%= genre.id %>"><%= genre.name %><br>

<% end %>
<input type="submit" value="Create">


</form>